# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
tab_width = 4

[*.{c,cc,cpp,h,hh,hpp}]
indent_size = 4

[*.cs]
indent_size = 4

[*.java]
indent_size = 4

[*.php]
indent_size = 4

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[*.rs]
indent_size = 4

[*.kt]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
